<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/Input"
        android:layout_width="247dp"
        android:layout_height="82dp"
        android:layout_marginTop="96dp"
        android:allowUndo="true"
        android:textAlignment="textEnd"
        android:textColor="#070000"
        android:textSize="30sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/Output"
        android:layout_width="323dp"
        android:layout_height="90dp"
        android:layout_below="@+id/Input"
        android:layout_marginStart="44dp"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:enabled="true"
        android:textAlignment="textEnd"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Input" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Output">

        <ToggleButton
            android:id="@+id/button_clear"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginTop="57dp"
            android:background="@drawable/clear_buton_background"
            android:textColor="@color/tanAccent"
            android:textOff="C"
            android:textOn="Ac"
            android:textSize="28sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_firstBracketopen"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="57dp"
            android:background="@drawable/button_background"
            android:text="("
            android:textColor="@color/tanAccent"
            android:textSize="28sp"
            app:layout_constraintStart_toEndOf="@+id/button_clear"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_firstBracketClose"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="57dp"
            android:background="@drawable/button_background"
            android:text=")"
            android:textColor="@color/tanAccent"
            android:textSize="28sp"
            app:layout_constraintStart_toEndOf="@+id/button_firstBracketopen"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_Divide"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="57dp"
            android:background="@drawable/arithmetic_button_background"
            android:text="รท"
            android:textColor="@color/tanAccent"
            android:textSize="28sp"
            app:layout_constraintStart_toEndOf="@+id/button_firstBracketClose"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_7"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_background"
            android:text="7"
            android:textColor="@color/tanAccent"
            android:textSize="28sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_clear" />

        <Button
            android:id="@+id/button_8"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_background"
            android:text="8"
            android:textColor="@color/tanAccent"
            android:textSize="28sp"
            app:layout_constraintStart_toEndOf="@+id/button_7"
            app:layout_constraintTop_toBottomOf="@+id/button_firstBracketopen" />

        <Button
            android:id="@+id/button_9"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_background"
            android:text="9"
            android:textColor="@color/tanAccent"
            android:textSize="28sp"
            app:layout_constraintStart_toEndOf="@+id/button_8"
            app:layout_constraintTop_toBottomOf="@+id/button_firstBracketClose" />

        <Button
            android:id="@+id/button_Into"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/arithmetic_button_background"
            android:text="@string/multiplication"
            android:textColor="@color/tanAccent"
            android:textSize="28sp"
            app:layout_constraintStart_toEndOf="@+id/button_9"
            app:layout_constraintTop_toBottomOf="@+id/button_Divide" />

        <Button
            android:id="@+id/button_4"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_background"
            android:text="4"
            android:textColor="@color/tanAccent"
            android:textSize="28sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_7" />

        <Button
            android:id="@+id/button_5"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_background"
            android:text="5"
            android:textColor="@color/tanAccent"
            android:textSize="28sp"
            app:layout_constraintStart_toEndOf="@+id/button_4"
            app:layout_constraintTop_toBottomOf="@+id/button_8" />

        <Button
            android:id="@+id/button_6"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_background"
            android:text="6"
            android:textColor="@color/tanAccent"
            android:textSize="28sp"
            app:layout_constraintStart_toEndOf="@+id/button_5"
            app:layout_constraintTop_toBottomOf="@+id/button_9" />

        <Button
            android:id="@+id/button_Minus"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/arithmetic_button_background"
            android:text="-"
            android:textColor="@color/tanAccent"
            android:textSize="28sp"
            app:layout_constraintStart_toEndOf="@+id/button_6"
            app:layout_constraintTop_toBottomOf="@+id/button_Into" />

        <Button
            android:id="@+id/button_1"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_background"
            android:text="1"
            android:textColor="@color/tanAccent"
            android:textSize="28sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_4" />

        <Button
            android:id="@+id/button_2"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_background"
            android:text="2"
            android:textColor="@color/tanAccent"
            android:textSize="28sp"
            app:layout_constraintStart_toEndOf="@+id/button_1"
            app:layout_constraintTop_toBottomOf="@+id/button_5" />

        <Button
            android:id="@+id/button_3"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_background"
            android:text="3"
            android:textColor="@color/tanAccent"
            android:textSize="28sp"
            app:layout_constraintStart_toEndOf="@+id/button_2"
            app:layout_constraintTop_toBottomOf="@+id/button_6" />

        <Button
            android:id="@+id/button_Plus"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/arithmetic_button_background"
            android:text="+"
            android:textColor="@color/tanAccent"
            android:textSize="28sp"
            app:layout_constraintStart_toEndOf="@+id/button_3"
            app:layout_constraintTop_toBottomOf="@+id/button_Minus" />

        <Button
            android:id="@+id/button_0"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_background"
            android:text="0"
            android:textColor="@color/tanAccent"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="@+id/button_2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/button_1"
            app:layout_constraintTop_toBottomOf="@+id/button_1" />

        <Button
            android:id="@+id/button_DecimalPoint"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_background"
            android:text="."
            android:textColor="@color/tanAccent"
            android:textSize="28sp"
            app:layout_constraintEnd_toStartOf="@+id/button_Equals"
            app:layout_constraintStart_toEndOf="@+id/button_0"
            app:layout_constraintTop_toBottomOf="@+id/button_3" />

        <Button
            android:id="@+id/button_Equals"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/equals_button_background"
            android:text="="
            android:textColor="@color/tanAccent"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button_DecimalPoint"
            app:layout_constraintTop_toBottomOf="@+id/button_Plus" />

        <Button
            android:id="@+id/Memory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:text="Memory"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>